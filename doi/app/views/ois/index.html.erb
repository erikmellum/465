<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<h1 class="page-header">Listing Digital Object Identifiers</h1>

<%= form_tag(ois_path, :method => "get") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search" %>
<%= submit_tag "Search" %> 
<% end %>


<table class="table table-hover">
  <tbody>
       <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Most Recent URL</th>
        <th>View History</th>
        <th>Edit Doi</th>
        <th>Delete Doi</th>
      </tr> 
    <% if @ois.size > 0 %>
    <% @ois.each do |oi| %>
      <tr>
        <td><%= oi.name %></td>
        <td><%= oi.description %></td>
        <td><%= oi.urls.last.url %></td>
        <td><%= link_to 'Show', oi, class: "btn" %></td>
        <td><%= link_to 'Edit', edit_oi_path(oi), class: "btn"  %></td>
        <td><%= link_to 'Destroy', oi, class: "btn", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% else %>   
      <td>Doi not found!</td>   
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Oi', new_oi_path, class: 'btn' %>
<% if @ois.size < 2 %>
<%= link_to 'Back', ois_path, class: 'btn' %>
<% end %>

